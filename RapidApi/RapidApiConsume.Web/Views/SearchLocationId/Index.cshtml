@model List<BookingApiLocationSearchViewModel>
@{
    Layout = null;
}

<!DOCTYPE html>


<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    @using (Html.BeginForm("Index", "SearchLocationId", FormMethod.Post))
    {
        <label>Şehir İsmi giriniz</label>
        <input type="text" class="form-control" name="cityName" />
        <br />
        <button class="btn btn-outline-primary">Bul</button>
    }

    <table class="table table-bordered">
    

        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.dest_id</td>
                     
                </tr>

        }



    </table>
    <br />
    <a href="/BookingByCity/Index/" class="btn btn-outline-dark">Yeni Otel Rezervasyon Bilgisi</a>

</div>

